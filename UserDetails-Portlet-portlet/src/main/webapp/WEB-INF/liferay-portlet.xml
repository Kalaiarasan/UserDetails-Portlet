<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>UserDetails-Portlet</portlet-name>
		<icon>/icon.png</icon>		
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
	</portlet>
	<portlet>
		<portlet-name>user</portlet-name>
		<icon>/icon.png</icon>		
		<configuration-action-class>
			net.opentrends.user.portletconfig.PortletConfigurationAction
		</configuration-action-class>
		<asset-renderer-factory>net.opentrends.workflow.customasset.PersonAssetRendererFactory</asset-renderer-factory> 
		<workflow-handler>net.opentrends.workflow.customasset.PersonWokflowHandler</workflow-handler>		
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>user-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>quick-link</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class> net.opentrends.portlet.quicklinks.action.QuickLinkConfiguration</configuration-action-class>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>quick-link-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>add-more-fields</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>add-more-fields-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>